<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/tip_bt"/>
    <TextView
        android:text="PublishSubject数据订阅传递"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl_publish_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"/>
        <FrameLayout
            android:id="@+id/fl_publish_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"/>
    </LinearLayout>
    <TextView
        android:text="SerializedSubject实现RxBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl_rxbus_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"/>
        <FrameLayout
            android:id="@+id/fl_rxbus_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"/>
    </LinearLayout>
</LinearLayout>